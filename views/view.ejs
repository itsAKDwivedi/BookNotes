<%- include("partials/header.ejs") %>

<div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary banner">
    <div class="container">
    <div class="col-lg px-0 flex banner">
        <div class="pe-4 pt-4 image">
            <img src="./resources/placeholder.jpg" alt="Recommended Book" id="book-cover" class="main-img" loading="lazy">
        </div>
        <div>
            <h1 class="display-5 fst-italic bold"><%= book.name %></h1>
            <div class="mb-1 text-body-secondary">By <%= book.author %> (<%= book.rating %>/10)</div>
            <p class="lead my-3"><%- book.intro %></p>
        </div>
    </div>
</div>
</div>

<main class="container">
    <div class="row g-5">
        <div class="col-md-8 notes-text">
            <p class="notes-text">
                <%- book.notes %>
            </p>
        </div>


        <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 bg-body-tertiary rounded">
            <h4 class="fst-italic">About</h4>
            <p class="mb-0">Whether you're looking to discover your next read, deepen your understanding of a favorite book, or simply explore new ideas, our platform is your go-to destination for unlocking the wisdom of the written word.</p>
            </div>

            <div>
            <h4 class="fst-italic">Check these</h4>
            <ul class="list-unstyled">
                <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/view?id=<%= books[idx[1]].id %>">
                    <img src="./resources/placeholder.jpg" id="image1" alt="Recommended Book" class="main-img extra" loading="lazy">
                    <div class="col-lg-8">
                    <h6 class="mb-0"><%= books[idx[1]].name %></h6>
                    <small class="text-body-secondary"><%= books[idx[1]].author %></small>
                    </div>
                </a>
                </li>
                <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/view?id=<%= books[idx[3]].id %>">
                    <img src="./resources/placeholder.jpg" id="image3" alt="Recommended Book" class="main-img extra" loading="lazy">
                    <div class="col-lg-8">
                    <h6 class="mb-0"><%= books[idx[3]].name %></h6>
                    <small class="text-body-secondary"><%= books[idx[3]].author %></small>
                    </div>
                </a>
                </li>
                <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/view?id=<%= books[idx[2]].id %>">
                    <img src="./resources/placeholder.jpg" id="image2" alt="Recommended Book" class="main-img extra" loading="lazy">
                    <div class="col-lg-8">
                    <h6 class="mb-0"><%= books[idx[2]].name %></h6>
                    <small class="text-body-secondary"><%= books[idx[2]].author %></small>
                    </div>
                </a>
                </li>
            </ul>
            </div>
            </div>
        </div>
        </div>
    </div>
</main>

<%- include("partials/footer.ejs") %>

<input type="hidden" id="server-data" value='<%= book.id %>' />

<script src="./js/view.js"></script>